rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helpers ---
    
    // Safely get the user's role in a single return statement
    function getUserRole() {
      let userDoc = get(
        /databases/$(database)/documents/artifacts/seminar-cloud/users/$(request.auth.uid)
      );
      // Use a ternary operator: (condition ? value_if_true : value_if_false)
      return userDoc.data != null ? userDoc.data.role : null;
    }

    // This function is now safe
    function isAdmin() {
      return getUserRole() == 'admin';
    }

    // --- User-Specific Data ---

    match /artifacts/seminar-cloud/users/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow get: if isAdmin();
    }

    match /artifacts/seminar-cloud/users/{userId}/{subcollection}/{docId} {
      allow read, write: if request.auth.uid == userId;
      allow read: if isAdmin();
    }

    // --- Public/Shared Data ---

    match /publicRubrics/{rubricId} {
      allow read: if request.auth.uid != null;
      allow write: if isAdmin();
    }

    match /submittedRubrics/{rubricId} {
      allow create: if request.auth.uid != null;
      allow read, delete: if isAdmin();
    }
  }
}